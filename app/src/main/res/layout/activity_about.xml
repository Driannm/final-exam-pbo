<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_marginTop="15mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/decs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_desc"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/md_theme_inverseSurface"
        android:textAlignment="center"
        android:textSize="3mm"
        android:paddingStart="8mm"
        android:paddingEnd="8mm"
        android:layout_marginTop="6mm"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/decs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_facebook"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_instagram"
            app:layout_constraintStart_toEndOf="@id/facebook"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/tiktok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tiktok"
            app:layout_constraintStart_toEndOf="@id/instagram"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/x"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_x"
            app:layout_constraintStart_toEndOf="@id/tiktok"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/github"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_github"
            app:layout_constraintStart_toEndOf="@id/x"
            android:layout_marginStart="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/sosial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sosial"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/md_theme_inverseSurface"
        android:textAlignment="center"
        android:textSize="12dp"
        android:paddingStart="8mm"
        android:paddingEnd="8mm"
        android:layout_marginTop="22mm"
        app:layout_constraintTop_toBottomOf="@id/decs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/md_theme_surfaceContainer"
        android:text="Back"
        android:textColor="@color/md_theme_inverseSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
